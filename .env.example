# Travel API Configuration
# Copy this file to .env and fill in your actual API credentials

# FLIGHT PROVIDERS
# Skyscanner Flight API
FLIGHT_SKYSCANNER_ENABLED=false
FLIGHT_SKYSCANNER_KEY=your_skyscanner_api_key
FLIGHT_SKYSCANNER_URL=https://api.skyscanner.com
FLIGHT_SKYSCANNER_RATE_LIMIT=100
FLIGHT_SKYSCANNER_TIMEOUT=30
FLIGHT_SKYSCANNER_CACHE_TTL=3600

# Amadeus Flight API
FLIGHT_AMADEUS_ENABLED=false
FLIGHT_AMADEUS_CLIENT_ID=your_amadeus_client_id
FLIGHT_AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
FLIGHT_AMADEUS_URL=https://api.amadeus.com
FLIGHT_AMADEUS_RATE_LIMIT=100
FLIGHT_AMADEUS_TIMEOUT=30
FLIGHT_AMADEUS_CACHE_TTL=3600

# RapidAPI Flight API
FLIGHT_RAPID_API_ENABLED=false
FLIGHT_RAPID_API_KEY=your_rapid_api_key
FLIGHT_RAPID_API_URL=https://rapidapi.com/flights
FLIGHT_RAPID_API_RATE_LIMIT=50
FLIGHT_RAPID_API_TIMEOUT=30
FLIGHT_RAPID_API_CACHE_TTL=1800


# BUS PROVIDERS
# RedBus API
BUS_REDBUS_ENABLED=false
BUS_REDBUS_KEY=your_redbus_api_key
BUS_REDBUS_URL=https://api.redbus.in
BUS_REDBUS_RATE_LIMIT=150
BUS_REDBUS_TIMEOUT=30
BUS_REDBUS_CACHE_TTL=1800

# MakeMyTrip Bus API
BUS_MAKEMYTRIP_ENABLED=false
BUS_MAKEMYTRIP_KEY=your_makemytrip_api_key
BUS_MAKEMYTRIP_PARTNER_ID=your_partner_id
BUS_MAKEMYTRIP_URL=https://api.makemytrip.com
BUS_MAKEMYTRIP_RATE_LIMIT=150
BUS_MAKEMYTRIP_TIMEOUT=30
BUS_MAKEMYTRIP_CACHE_TTL=1800

# GoiBibo API
BUS_GOIBIBO_ENABLED=false
BUS_GOIBIBO_KEY=your_goibibo_api_key
BUS_GOIBIBO_URL=https://api.goibibo.com
BUS_GOIBIBO_RATE_LIMIT=100
BUS_GOIBIBO_TIMEOUT=30
BUS_GOIBIBO_CACHE_TTL=1800

# TRAIN PROVIDERS
# IRCTC API
TRAIN_IRCTC_ENABLED=false
TRAIN_IRCTC_USERNAME=your_irctc_username
TRAIN_IRCTC_PASSWORD=your_irctc_password
TRAIN_IRCTC_URL=https://api.irctc.co.in
TRAIN_IRCTC_RATE_LIMIT=100
TRAIN_IRCTC_TIMEOUT=45
TRAIN_IRCTC_CACHE_TTL=1800

# Cleartrip Train API
TRAIN_CLEARTRIP_ENABLED=false
TRAIN_CLEARTRIP_KEY=your_cleartrip_api_key
TRAIN_CLEARTRIP_URL=https://api.cleartrip.com
TRAIN_CLEARTRIP_RATE_LIMIT=100
TRAIN_CLEARTRIP_TIMEOUT=30
TRAIN_CLEARTRIP_CACHE_TTL=1800

# MakeMyTrip Train API
TRAIN_MAKEMYTRIP_ENABLED=false
TRAIN_MAKEMYTRIP_KEY=your_makemytrip_train_api_key
TRAIN_MAKEMYTRIP_PARTNER_ID=your_train_partner_id
TRAIN_MAKEMYTRIP_URL=https://api.makemytrip.com
TRAIN_MAKEMYTRIP_RATE_LIMIT=100
TRAIN_MAKEMYTRIP_TIMEOUT=30
TRAIN_MAKEMYTRIP_CACHE_TTL=1800

# SYSTEM CONFIGURATION
# Use database as fallback when APIs are unavailable
TRAVEL_USE_DB_FALLBACK=true

# Global API timeout (seconds)
TRAVEL_API_TIMEOUT=30

# Enable response caching
TRAVEL_CACHE_ENABLED=true

# Cache driver: file, redis, memcached
TRAVEL_CACHE_DRIVER=file

# Cache TTL (seconds) - how long to cache responses
TRAVEL_CACHE_TTL=3600

# Rate limiting
TRAVEL_RATE_LIMITING_ENABLED=true
TRAVEL_REQUESTS_PER_MINUTE=1000

# Logging
TRAVEL_LOG_REQUESTS=true
TRAVEL_LOG_FILE=/path/to/logs/travel_api.log

# ENCRYPTION KEYS (Optional - for secure API key storage)
# If you want to use encryption for API keys, generate a secure key:
# php -r "echo bin2hex(random_bytes(32));"
API_ENCRYPTION_KEY=your_encryption_key_here
